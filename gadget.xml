<?xml version="1.0" encoding="UTF-8" ?>
<Module>
    <ModulePrefs title="Ryver Hangout">
        <Require feature="rpc"/>
        <Require feature="views"/>
    </ModulePrefs>
    <Content type="html"><![CDATA[
        <html>
            <head>
                <style href="http://googlehangoutxml.ryver.com/css/main.css"/>

                <script type="text/javascript" src="//www.google.com/jsapi"></script>
                <script type="text/javascript">google.load("jquery", "2.1.1");</script>
                <script src="//plus.google.com/hangouts/_/api/v1/hangout.js"></script>
                <script src="http://googlehangoutxml.ryver.com/js/main.js"></script>
            </head>
            <body>
                <header class="ryver-view-header">
                    <span id="ryver-room"></span>
                </header>

                <main class="ryver-view-body">
                    <ul id="ryver-participant-list"></ul>
                </main>
            </body>
        </html>
    ]]></Content>
</Module>
